{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "module": "commonjs",
    "sourceMap": true,
    "target": "ES5",
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "tests/**/*.spec.ts",
    "tests/**/*.spec.tsx"
  ],
  "exclude": [
    "node_modules",
    ".git",
    ".vs"
  ],
}
